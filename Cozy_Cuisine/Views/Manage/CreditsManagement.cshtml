@model Cozy_Cuisine.ViewModels.CreditsManagementVM
@{
    Layout = "Admin_Layout";
    ViewData["Title"] = "Dashboard";
}
@* TEMPORARY CSS LANG DASHBOARD *@
<link href="~/css/dashboard.css" rel="stylesheet" />


<form id="creditsForm" method="post" asp-controller="Manage" asp-action="CreateCredits" onsubmit="confirmSubmit(event)">
    <div>
        <label asp-for="NewCredits.Name"></label>
        <input type="text" asp-for="NewCredits.Name" class="form-control" placeholder="Enter Name" required />
    </div>
    <div>
        <label asp-for="NewCredits.Role"></label>
        <input type="text" asp-for="NewCredits.Role" class="form-control" placeholder="Enter Role" required />
    </div>
    <div>
        <label asp-for="NewCredits.URLGif"></label>
        <input type="text" asp-for="NewCredits.URLGif" class="form-control" placeholder="One GIF link only (Optional):" />
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
</form>

<table class="table table-bordered table-hover table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Role</th>
            <th>URLGif</th>
            <th>Date Added</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Credits != null && Model.Credits.Any())
        {
            @foreach (var credit in Model.Credits)
            {

                <tr>
                    <td>@credit.CreditId</td>
                    <td>@credit.Name</td>
                    <td>@credit.Role</td>
                    <td>@credit.URLGif</td>
                    <td>@credit.DateAdded.ToString("MMMM dd, yyyy")</td>
                    <td>
                        <a asp-action="DetailsCredit" asp-route-id="@credit.CreditId" class="actionsbtn focus-ring btn btn-sm mb-1"><i class="fa-solid fa-eye fa-sm"></i>View</a>

                        @* opens a modal popup to make the changes *@
                        <button type="button" class="actionsbtn focus-ring btn btn-sm mb-1"
                                data-bs-toggle="modal"
                                data-bs-target="#editCreditsModal"
                                data-id="@credit.CreditId"
                                data-name="@credit.Name"
                                data-role="@credit.Role"
                                data-url="@credit.URLGif">
                            <i class="fa-solid fa-pen-to-square fa-sm"></i>
                            Edit
                        </button>

                        <form class="d-inline" id="deleteForm-@credit.CreditId" method="post" asp-action="DeleteCredit" asp-route-id="@credit.CreditId">
                            <button type="button" class="actionsbtn focus-ring btn btn-sm mb-1" onclick="confirmDelete(event, 'deleteForm-@credit.CreditId')"><i class="fa-solid fa-trash fa-sm"></i>Delete</button>
                        </form>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>

@* MODAL POPUP FOR EDITING RECORD *@
<div class="modal fade" id="editCreditsModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Edit Credits</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form id="editCreditsForm" method="post" asp-action="EditCredits">
                    <input type="hidden" id="creditId" name="CreditId">

                    <div class="mb-3">
                        <label class="form-label">Name</label>
                        <input type="text" class="form-control" id="name" name="Name" required>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Role</label>
                        <textarea class="form-control" id="role" name="Role" required></textarea>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">URLGif</label>
                        <textarea class="form-control" id="urlgif" name="URLGif" placeholder="One GIF link only (Optional):"></textarea>
                    </div>

                    <button type="submit" class="btn btn-primary">Save Changes</button>
                </form>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <script>
                document.addEventListener("DOMContentLoaded", function () {
            const form = document.getElementById("creditsForm");

            if (form) {
                form.addEventListener("submit", function (event) {
                    event.preventDefault(); // Stop default form submission

                    Swal.fire({
                        title: "Are you sure?",
                        text: "You can always delete or edit the record later.",
                        icon: "warning",
                        showCancelButton: true,
                        confirmButtonColor: "#3085d6",
                        cancelButtonColor: "#d33",
                        confirmButtonText: "Yes, submit it!"
                    }).then((result) => {
                        if (result.isConfirmed) {
                            form.submit(); // Submit the form after confirmation
                        }
                    });
                });
            }
        });

        function confirmDelete(event, formId) {
            event.preventDefault();

            Swal.fire({
                title: "Are you sure?",
                text: "You won't be able to revert this!",
                icon: "warning",
                showCancelButton: true,
                confirmButtonColor: "#3085d6",
                cancelButtonColor: "#d33",
                confirmButtonText: "Yes, delete it!"
            }).then((result) => {
                if (result.isConfirmed) {
                    document.getElementById(formId).submit();
                }
            });
        }
    </script>
    <script>
        $(document).ready(function () {
            $(".actionsbtn").click(function () {
                let creditId = $(this).data("id");
                let name = $(this).data("name");
                let role = $(this).data("role");
                let url = $(this).data("url");

                console.log("Credit ID:", creditId);
                console.log("Name:", name);
                console.log("Role:", role);
                console.log("URL:", url);

                // Set modal input values
                $("#creditId").val(creditId);
                $("#name").val(name);
                $("#role").val(role);
                $("#url").val(url);
            });
        });

    </script>
}