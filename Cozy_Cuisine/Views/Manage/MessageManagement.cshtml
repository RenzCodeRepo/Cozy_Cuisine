@model List<Cozy_Cuisine.Models.Contacts>
@{
    Layout = "Admin_Layout";
    ViewData["Title"] = "Dashboard";
}
@* TEMPORARY CSS LANG DASHBOARD *@
<link href="~/css/dashboard.css" rel="stylesheet" />


<table class="table table-bordered table-hover table-striped">
    <thead>
        <tr>
            <th>Message ID</th>
            <th>Email Subject</th>
            <th>Email Message</th>
            <th>Email Address</th>
            <th>Date Received</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            @foreach (var message in Model)
            {

                <tr>
                    <td>@message.MessageId</td>
                    <td>@message.EmailSubject</td>
                    <td>@message.EmailBody</td>
                    <td>@message.EmailAddress</td>
                    <td>@message.SentDate</td>

                    <td>

                        <form class="d-inline" id="deleteForm-@message.MessageId" method="post" asp-action="DeleteMessage" asp-route-id="@message.MessageId">
                            <button type="button" class="actionsbtn focus-ring btn btn-sm mb-1" onclick="confirmDelete(event, 'deleteForm-@message.MessageId')"><i class="fa-solid fa-trash fa-sm"></i>Delete</button>
                        </form>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>

@section Scripts {
    <script>
       
        function confirmDelete(event, formId) {
            event.preventDefault();

            Swal.fire({
                title: "Are you sure?",
                text: "You won't be able to revert this!",
                icon: "warning",
                showCancelButton: true,
                confirmButtonColor: "#3085d6",
                cancelButtonColor: "#d33",
                confirmButtonText: "Yes, delete it!"
            }).then((result) => {
                console.log("Swal result:", result); // Debugging line
                if (result.isConfirmed) {
                    console.log("Form submission triggered:", formId); // Debugging line
                    document.getElementById(formId).submit();
                }
            });
        }

    </script>
}