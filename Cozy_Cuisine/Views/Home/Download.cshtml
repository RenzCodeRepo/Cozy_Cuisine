                            </div>
                            <div>
                                <div class="stars mb-1">
                                    @for (int i = 1; i <= 5; i++)
                                    {
                                        if (i <= review.Rating)
                                        {
                                            <i class="fa-solid fa-star fa-sm"></i>
                                        }
                                        else
                                        {
                                            <i class="fa-regular fa-star fa-sm"></i>
                                        }
                                    }
                                </div>
                                <div class="review-tag">@thought</div> 
                            </div>
                        </div>
                        <div class="review-text">
                            @comment
