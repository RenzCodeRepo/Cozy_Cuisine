<!-- MODAL POPUP FOR GAME REVIEW -->
<div class="modal fade" id="reviewModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content rounded-4 p-4 shadow-sm">
            <form asp-controller="Home" asp-action="SubmitReview" method="post">
                <h5 class="text-center mb-3 fs-4">Rate our Game!</h5>
                <p class="text-center mb-3 fs-3">How was our game?</p>

                <div class="hamburger-rating d-flex justify-content-center mb-3">
                    <input type="radio" id="hamburger5" name="Rating" value="5" required />
                    <label for="hamburger5"><i class="fa-solid fa-star"></i></label>

                    <input type="radio" id="hamburger4" name="Rating" value="4" />
                    <label for="hamburger4"><i class="fa-solid fa-star"></i></label>

                    <input type="radio" id="hamburger3" name="Rating" value="3" />
                    <label for="hamburger3"><i class="fa-solid fa-star"></i></label>

                    <input type="radio" id="hamburger2" name="Rating" value="2" />
                    <label for="hamburger2"><i class="fa-solid fa-star"></i></label>

                    <input type="radio" id="hamburger1" name="Rating" value="1" />
                    <label for="hamburger1"><i class="fa-solid fa-star"></i></label>
                </div>

                <div class="mb-3">
                    <input type="text" name="Thoughts" class="form-control p-3 rounded-3" placeholder="Your main thought..." required />
                </div>
                <div class="mb-3">
                    <textarea name="ReviewComment" class="fcbug focus-ring form-control rounded-3 p-3 text-muted" placeholder="Leave a message, if you want" rows="3"></textarea>
                </div>

                <div class="w-100 mb-2 d-flex justify-content-center">
                    <button type="submit" class="btn joinbtn w-75">Submit</button>
                </div>
                <p class="text-center mt-2">
                    <a href="#" data-bs-dismiss="modal" class="text-decoration-none text-muted">Maybe later</a>
                </p>
            </form>
        </div>
    </div>
</div>
